<%- include('../partials/head', {title:PageTitle})%>
<%- include('../partials/nav')%>
<% if(!valid){%>
<div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <% for(e of errors){ %>
       <p><%= e%></p>
        <%}%>
  </div>
  <%}%>
<div class="container">
    <div class="row">
        <div class="col-md-8">
    <form method="post" action="">
        <div class="form-group">
            <label for="name" >Name</label>
            <input class="form-control" type="text" name="name" value="<% if(!valid){%><%= data.name%><%}%>">
        </div>
        <div class="form-group">
            <label for="type" >Type</label>
            <input class="form-control" type="text" name="type" value="<% if(!valid){%><%= data.type%><%}%>">
        </div>
        <div class="form-group">
            <label for="price" >Price</label>
            <input class="form-control" type="number" name="price" value="<% if(!valid){%><%= data.price%><%}%>">
        </div>
        <div class="form-group">
            <label for="description" >Description</label>
            <input class="form-control" type="text" name="description" value="<% if(!valid){%><%= data.description%><%}%>">
        </div>
        <input class="btn btn-success mb-2" type="submit" value="Save"><br>
    </form> 
</div>
</div>
</div>
<%- include('../partials/footer')%>